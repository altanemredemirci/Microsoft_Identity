@model ResetPasswordViewModel
@{
    ViewData["Title"] = "ResetPassword";
}

<div class="container mt-5 mb-5">
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <form asp-action="ResetPassword" asp-controller="Account">
                <div asp-validation-summary="All" class="text-danger"></div>
                @if (TempData["message"] != null)
                {
                    <div class="text-warning"><h4>@TempData["message"]</h4></div>
                }

                <input type="hidden" name="token" value="@Model.token" /> 
                <input type="hidden" name="userId" value="@Model.userId" /> 

                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input asp-for="Password" class="form-control">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input asp-for="RePassword" class="form-control">
                </div>
                <button type="submit" class="btn btn-primary">Şifre Oluştur</button>
            </form>
        </div>
        <div class="col-3"></div>

    </div>


</div>

