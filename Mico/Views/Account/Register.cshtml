@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="container mt-5 mb-5">
    <div class="row"> <!--row 12 eşit kolondan oluşur-->
        <div class="col-3"></div>

        <div class="col-6">
            @* <form action="/Account/Register" method="post"></form>
            <form asp-action="Register" asp-controller="Account" method="post"></form> 
            <form asp-action="Register" method="post"></form> <!--Get ve Post actionları aynı controller altında ise asp-contr. gereksiz-->
            <form asp-action="Register"></form> <!--asp form tags default olarak  POST metot tanımlıdır. method="post" gereksiz--> *@
            <form method="post"> <!--Aynı controller altındaki aynı action ismine post edilecek ise herşey gereksizdir.-->
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" placeholder="Adınız..">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Surname"></label>
                    <input asp-for="Surname" class="form-control" placeholder="Soyadınız..">
                    <span asp-validation-for="Surname" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="Username"></label>
                    <input asp-for="Username" class="form-control" placeholder="Kullanıcı Adınız..">
                    <span asp-validation-for="Username" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" placeholder="Email...">
                    <span asp-validation-for="Email" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" placeholder="Şifre...">
                    <span asp-validation-for="Password" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="RePassword"></label>
                    <input asp-for="RePassword" class="form-control" placeholder="Tekrar Şifre...">
                    <span asp-validation-for="RePassword" class="text-danger"></span>

                </div>
                <button type="submit" class="btn btn-primary">Kayıt Ol</button>
            </form>
        </div>
        <div class="col-3"></div>
      
    </div>
</div>

