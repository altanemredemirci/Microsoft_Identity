@model Doctor
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form asp-action="Create" asp-controller="Doctor" method="post">
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <div class="card card-primary mt-5">
                <div class="card-header">
                    <h3 class="card-title">Yeni Doktor Kayıt Formu</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->

                <div class="card-body">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Ad</label>
                        <input asp-for="Name" class="form-control">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Soyad</label>
                        <input asp-for="Surname" class="form-control">
                        <span asp-validation-for="Surname" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Branş:</label>
                        <select class="form-control" asp-for="Branch">
                            @foreach (Branch item in ViewBag.Branchs)
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        </select>
                    </div>
                </div>
                <!-- /.card-body -->
                <button type="button" class="btn btn-default" data-toggle="modal" data-target="#social">
                    Sosyal Medya
                </button>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>

            </div>
        </div>
        <div class="col-3"></div>
    </div>


    <div class="modal fade" id="social" style="display: none;" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Default Modal</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">

                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fab fa-twitter"></i></span>
                        </div>
                        <input asp-for="SocialMedias[0].Url" class="form-control" placeholder="Sosyal medya adresi.." />
                    </div>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fab fa-instagram"></i></span>
                        </div>
                        <input asp-for="SocialMedias[1].Url" class="form-control" placeholder="Sosyal medya adresi.." />
                    </div>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fab fa-facebook"></i></span>
                        </div>
                        <input asp-for="SocialMedias[2].Url" class="form-control" placeholder="Sosyal medya adresi.." />
                    </div>


                </div>
                <div class="modal-footer justify-content-between">
                    <button type="button" class="btn btn-success" data-dismiss="modal">Ekle</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>

</form>